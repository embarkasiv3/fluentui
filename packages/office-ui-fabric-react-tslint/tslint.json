{
  "extends": [
    "@microsoft/gulp-core-build-typescript/lib/defaultTslint.json",
    "tslint-react"
  ],
  "rules": {
    "jsx-curly-spacing": {
      "when": "always"
    },
    "jsx-no-bind": true,
    "jsx-boolean-value": "never",
    "jsx-equals-spacing": "never",
    "jsx-key": true,
    "jsx-no-lambda": true,
    "jsx-self-close": true,
    "jsx-wrap-multiline": true,
    "jsx-no-string-ref": true,
    "jsx-ban-props": [
      true,
      [
        "style",
        "Use className and provide css rules instead of using inline styles."
      ]
    ],
    "no-duplicate-variable": true,
    "use-isnan": true,
    "triple-equals": [
      true
    ],
    "max-line-length": [
      true,
      140
    ],
    "no-arg": true,
    "radix": true,
    "typedef": [
      true,
      "call-signature",
      "parameter",
      "arrow-parameter",
      "property-declaration",
      "member-variable-declaration"
    ],
    "no-unused-expression": [
      false
    ],
    "prefer-const": false,
    "quotemark": [
      true,
      "single",
      "jsx-single"
    ],
    "no-inferrable-types": [
      true,
      "ignore-params"
    ],
    "no-null-keyword": false,
    "export-name": false,
    "trailing-comma": [
      false
    ],
    "whitespace": [
      false
    ],
    "no-trailing-whitespace": false,
    "no-switch-case-fall-through": false,
    "variable-name": [
      true,
      "check-format",
      "allow-leading-underscore",
      "allow-pascal-case",
      "ban-keywords"
    ]
  }
}