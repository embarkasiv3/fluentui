{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "lib",
    "target": "es6",
    "module": "es6",
    "lib": ["dom", "es6"],
    "jsx": "react",
    "declaration": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "noUnusedLocals": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "moduleResolution": "node",
    "preserveConstEnums": true,
    "types": [],
    "esModuleInterop": true
  },
  "include": ["src"]
}
